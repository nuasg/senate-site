!!! 5
%html
  %head
    %title Senate
    = csrf_meta_tags
    = csp_meta_tag
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1, user-scalable=no'}
    = stylesheet_link_tag     'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag  'application', 'data-turbolinks-track': 'reload'
    = stylesheet_link_tag     'https://fonts.googleapis.com/css?family=Lato:400,500,700|Montserrat:400,500,700'
    = stylesheet_link_tag     'https://use.fontawesome.com/releases/v5.0.13/css/all.css'
    = favicon_link_tag        'favicon-32x32.png'
  %body
    = yield
    - if flash[:alert]
      .alert.light= flash[:alert]
